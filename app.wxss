page {
  background-color: #1a1a2e;
  color: #f0f0f0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background: linear-gradient(135deg, #252540, #2d2d44);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(255,255,255,0.05);
}

.btn-primary {
  background: linear-gradient(135deg, #FF8A00, #FF6347);
  color: #fff;
  border-radius: 50rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}
