/* app.wxss - 全局样式 */

/* 配色变量 */
page {
  --bg-color: #F5F5DC;
  --card-bg: #FFFFFF;
  --text-primary: #5D4037;
  --text-secondary: #8D6E63;
  --accent-color: #FF8A65;
  --button-color: #8B4513;
  --success-color: #81C784;
  
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  color: var(--text-primary);
}

/* 通用样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn-primary {
  background-color: var(--button-color);
  color: #FFFFFF;
  border-radius: 40rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(139, 69, 19, 0.3);
}

.btn-secondary {
  background-color: transparent;
  color: var(--button-color);
  border: 2rpx solid var(--button-color);
  border-radius: 40rpx;
  padding: 22rpx 46rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background-color: rgba(139, 69, 19, 0.1);
  transform: scale(0.98);
}

/* 卡片样式 */
.card {
  background-color: var(--card-bg);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

/* 输入框样式 */
.input-field {
  background-color: #FAFAFA;
  border: 2rpx solid #E0E0E0;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  min-height: 200rpx;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--button-color);
}

.input-field::placeholder {
  color: var(--text-secondary);
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 32rpx;
}

/* Flex 布局辅助类 */
.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 间距辅助类 */
.mt-20 { margin-top: 20rpx; }
.mt-32 { margin-top: 32rpx; }
.mt-48 { margin-top: 48rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-32 { margin-bottom: 32rpx; }
.p-20 { padding: 20rpx; }
.p-32 { padding: 32rpx; }
