/* pages/community/community.wxss */
.filter-bar {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 30rpx;
}

.filter-btn {
  font-size: 30rpx;
  color: #888;
  padding-bottom: 10rpx;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s;
}

.filter-btn.active {
  color: #FF8A00;
  border-bottom-color: #FF8A00;
}

.question-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.anon-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3d3d5c, #4a4a6a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.anon-info {
  flex: 1;
}

.anon-name {
  font-size: 28rpx;
  color: #f0f0f0;
  display: block;
}

.anon-time {
  font-size: 24rpx;
  color: #666;
}

.like-badge {
  font-size: 26rpx;
  color: #FF6B6B;
}

.question-text {
  font-size: 32rpx;
  color: #e0e0e0;
  line-height: 1.6;
  display: block;
}

.answer-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255,255,255,0.05);
  display: none;
}

.answer-section.show {
  display: block;
}

.answer-label {
  font-size: 26rpx;
  color: #FF8A00;
  display: block;
  margin-bottom: 10rpx;
}

.answer-text {
  font-size: 30rpx;
  color: #d0d0d0;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.vote-btns {
  display: flex;
  gap: 20rpx;
}

.vote-btn {
  flex: 1;
  background: #2d2d44;
  border: none;
  font-size: 24rpx;
  color: #888;
  padding: 16rpx;
  border-radius: 30rpx;
}
