/* pages/community/community.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF7ED 0%, #FEFCE8 50%, #EFF6FF 100%);
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

/* 顶部横幅图 */
.hero-banner {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.hero-img {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50%;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 247, 237, 0.8) 100%);
}

/* 标签栏（sticky） */
.tab-header {
  position: sticky;
  z-index: 100;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 2rpx solid #FFEDD5;
  padding: 16rpx 32rpx 20rpx;
}

/* 标签栏 */
.tab-bar {
  display: grid;
  grid-template-columns: 1fr 1fr;
  background: #FFEDD5;
  border-radius: 16rpx;
  padding: 6rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 0;
  font-size: 28rpx;
  color: #9CA3AF;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #FFFFFF;
  color: #1F2937;
  font-weight: 600;
}

.tab-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 160rpx 32rpx 64rpx;
}

.empty-image {
  width: 384rpx;
  height: 384rpx;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #6B7280;
}

/* 问题卡片列表 */
.question-list {
  padding: 16rpx 32rpx 0;
}

.question-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.question-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 用户信息行 */
.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-emoji {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.user-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
}

.time-dot {
  margin: 0 10rpx;
  color: #9CA3AF;
  font-size: 26rpx;
}

.time-text {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 问题 */
.question-row {
  display: flex;
  margin-bottom: 16rpx;
}

.question-label {
  font-size: 26rpx;
  color: #6B7280;
  margin-right: 6rpx;
  flex-shrink: 0;
}

.question-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #1F2937;
  line-height: 1.5;
}

/* 回答预览 */
.answer-preview {
  background: linear-gradient(135deg, #FFF7ED, #FEFCE8);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.answer-preview .answer-text {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 2rpx solid #F3F4F6;
}

.stats-left {
  display: flex;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}

.stat-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #6B7280;
}

.like-btn {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 0;
  transition: all 0.3s ease;
}

.like-btn:active {
  transform: scale(1.1);
}

.liked-text {
  color: #EF4444;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 48rpx 0;
}

.loading-text {
  color: #9CA3AF;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 48rpx 0;
}

.no-more-text {
  color: #9CA3AF;
  font-size: 24rpx;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  margin: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  border: 2rpx solid #FED7AA;
}

.error-icon-text {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 32rpx;
  color: #EA580C;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.error-hint {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 30rpx;
  text-align: center;
}

.retry-btn {
  background: linear-gradient(135deg, #F97316, #FB923C);
  color: #FFFFFF;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}
