/* pages/community/community.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F5DC;
  padding: 20rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #8D6E63;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #FF8A65;
  color: #FFFFFF;
  font-weight: bold;
}

/* 问题列表 */
.question-list {
  padding-bottom: 20rpx;
}

.question-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.question-text {
  font-size: 30rpx;
  color: #5D4037;
  flex: 1;
  line-height: 1.5;
}

.expand-icon {
  font-size: 24rpx;
  color: #FF8A65;
  margin-left: 20rpx;
  white-space: nowrap;
}

.answer-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #EEE;
}

.answer-section.hide {
  display: none;
}

.answer-text {
  font-size: 28rpx;
  color: #8D6E63;
  line-height: 1.6;
}

.vote-bar {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.vote-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #F5F5DC;
  border-radius: 30rpx;
}

.vote-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.vote-count {
  font-size: 26rpx;
  color: #8D6E63;
}

/* 状态显示 */
.loading-state,
.empty-state,
.no-more {
  text-align: center;
  padding: 60rpx 0;
}

.loading-state text,
.no-more text {
  color: #8D6E63;
  font-size: 28rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #8D6E63;
  font-size: 28rpx;
}
