/* pages/history/history.wxss */

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF7ED 0%, #FEFCE8 50%, #EFF6FF 100%);
  padding-bottom: 40rpx;
}

/* 顶部导航栏 */
.sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  border-bottom: 2rpx solid #FFEDD5;
  padding-top: env(safe-area-inset-top);
}

.header-inner {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.back-btn:active {
  background: rgba(234, 88, 12, 0.1);
}

.back-arrow {
  font-size: 40rpx;
  color: #EA580C;
  font-weight: 600;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
}

/* 历史列表 */
.history-list {
  padding: 24rpx 32rpx 0;
}

.history-item {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.history-item:active {
  transform: scale(0.98);
}

.history-question {
  font-size: 32rpx;
  font-weight: 500;
  color: #1F2937;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: block;
}

.history-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.history-time {
  font-size: 24rpx;
  color: #6B7280;
}

.history-likes {
  font-size: 24rpx;
  color: #EF4444;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 48rpx;
}

.empty-btn {
  padding: 24rpx 64rpx;
}
