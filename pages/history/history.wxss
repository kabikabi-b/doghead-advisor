/* pages/history/history.wxss */

/* Header */
.header {
  text-align: center;
  padding: 32rpx 0;
  margin-bottom: 24rpx;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #5D4037;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #8D6E63;
}

/* History List */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  padding: 28rpx;
  transition: all 0.2s ease;
  border-left: 6rpx solid transparent;
}

.history-item:active {
  transform: scale(0.98);
  border-left-color: #FF8A65;
}

.item-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.item-q-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #FF8A65;
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.item-question {
  font-size: 28rpx;
  font-weight: 500;
  color: #5D4037;
  line-height: 1.5;
  flex: 1;
}

.item-preview {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-left: 56rpx;
}

.item-a-icon {
  width: 32rpx;
  height: 32rpx;
  background-color: #8B4513;
  color: #FFFFFF;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.item-reply {
  font-size: 26rpx;
  color: #8D6E63;
  line-height: 1.5;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 56rpx;
}

.item-time {
  font-size: 22rpx;
  color: #BDBDBD;
}

.item-arrow {
  font-size: 32rpx;
  color: #BDBDBD;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #5D4037;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #8D6E63;
  margin-bottom: 48rpx;
}

.empty-btn {
  width: 80%;
  max-width: 400rpx;
}
