<view class="container">
  <view class="header">
    <image class="dog-avatar" src="/ui-design/west-highland-dog.png"></image>
    <text class="title">狗狗军师</text>
    <text class="subtitle">你的无厘头AI顾问</text>
  </view>
  
  <view class="card input-area">
    <textarea 
      class="question-input" 
      placeholder="请输入你的问题..." 
      placeholder-class="placeholder"
      bindinput="onQuestionInput"
      maxlength="500"
    ></textarea>
  </view>
  
  <button class="btn-primary" bindtap="onGenerate">🎯 生成无厘头回复</button>
  
  <view class="examples">
    <text class="examples-title">试试这样问</text>
    <view class="example-tags">
      <view class="example-tag" bindtap="onExampleTap" data-question="老板不给涨工资">老板不给涨工资</view>
      <view class="example-tag" bindtap="onExampleTap" data-question="女朋友生气了">女朋友生气了</view>
      <view class="example-tag" bindtap="onExampleTap" data-question="朋友借钱不还">朋友借钱不还</view>
      <view class="example-tag" bindtap="onExampleTap" data-question="被同事穿小鞋">被同事穿小鞋</view>
    </view>
  </view>
</view>
