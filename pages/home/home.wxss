.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.dog-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(255, 138, 0, 0.3);
}

.title {
  font-size: 48rpx;
  color: #f0f0f0;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
}

.question-input {
  width: 100%;
  height: 240rpx;
  background: #1a1a2e;
  border: 4rpx dashed #4a4a6a;
  border-radius: 32rpx;
  padding: 30rpx;
  font-size: 32rpx;
  color: #f0f0f0;
  box-sizing: border-box;
}

.placeholder {
  color: #666;
}

.examples {
  margin-top: 30rpx;
}

.examples-title {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 20rpx;
  display: block;
}

.example-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.example-tag {
  background: linear-gradient(135deg, #3d3d5c, #4a4a6a);
  color: #f0f0f0;
  padding: 16rpx 28rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
}
