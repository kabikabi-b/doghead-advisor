/* pages/index/index.wxss */

.page-bg {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF7ED 0%, #FEFCE8 50%, #EFF6FF 100%);
  padding-bottom: 160rpx;
}

/* Content */
.content-area {
  padding: 24rpx 32rpx;
  padding-top: calc(24rpx + env(safe-area-inset-top));
}

/* Banner Card */
.banner-card {
  border-radius: 24rpx;
  overflow: hidden;
  border: 2rpx solid #FED7AA;
  background: linear-gradient(135deg, #FFEDD5, #FEF9C3);
  margin-bottom: 24rpx;
}

.banner-img-wrap {
  position: relative;
  width: 100%;
  height: 384rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.banner-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(251, 146, 60, 0) 0%, rgba(251, 146, 60, 0.6) 100%);
}

.banner-bottom {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.banner-title {
  color: #FFFFFF;
  font-size: 44rpx;
  font-weight: 700;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.banner-text {
  text-align: center;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* Question Input Card */
.input-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.input-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.input-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.input-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #EA580C;
}

.question-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 30rpx;
  color: #1F2937;
  line-height: 1.6;
  padding: 24rpx;
  box-sizing: border-box;
  background: #F9FAFB;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
}

.textarea-placeholder {
  color: #9CA3AF;
}

.input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.char-count {
  font-size: 26rpx;
  color: #9CA3AF;
}

.ask-btn {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #F97316, #FB923C);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 18rpx 40rpx;
  border: none;
  line-height: 1;
}

.ask-btn[disabled] {
  opacity: 0.5;
}

.ask-btn::after {
  border: none;
}

.ask-btn-icon {
  margin-right: 8rpx;
  font-size: 30rpx;
}

.ask-btn-text {
  font-size: 30rpx;
}

/* Loading State */
.loading-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 64rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.loading-emoji-wrap {
  margin-bottom: 32rpx;
}

.loading-emoji {
  font-size: 120rpx;
  display: inline-block;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-msg {
  font-size: 32rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 32rpx;
}

.loading-dots {
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #F97316;
  animation: bounce 1.4s ease-in-out infinite;
}

.dot-1 { animation-delay: 0s; }
.dot-2 { animation-delay: 0.2s; }
.dot-3 { animation-delay: 0.4s; }

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-16rpx); }
}

/* Question Display */
.question-display {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  display: flex;
}

.q-emoji {
  font-size: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.q-content {
  flex: 1;
}

.q-label {
  font-size: 26rpx;
  color: #6B7280;
  display: block;
  margin-bottom: 8rpx;
}

.q-text {
  font-size: 32rpx;
  color: #1F2937;
  line-height: 1.5;
}

/* Answer Display */
.answer-display {
  background: linear-gradient(135deg, #F97316, #FB923C);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
}

.a-emoji {
  font-size: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.a-content {
  flex: 1;
}

.a-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 8rpx;
}

.a-text {
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* Answer Actions */
.answer-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.btn-share {
  flex: 1;
  background: transparent;
  border: 3rpx solid #F97316;
  color: #EA580C;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 50rpx;
  padding: 22rpx 0;
  line-height: 1;
}

.btn-share::after {
  border: none;
}

.btn-again {
  flex: 1;
  background: linear-gradient(135deg, #F97316, #FB923C);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 22rpx 0;
  border: none;
  line-height: 1;
}

.btn-again::after {
  border: none;
}

/* Tips Card */
.tips-card {
  background: #EFF6FF;
  border: 2rpx solid #BFDBFE;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.tips-text {
  font-size: 28rpx;
  color: #1E40AF;
  line-height: 1.5;
}

/* Hot Questions */
.hot-section {
  margin-top: 16rpx;
}

.hot-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.hot-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.hot-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1F2937;
}

.hot-list {
  display: flex;
  flex-direction: column;
}

.hot-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.hot-item:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.98);
}

.hot-item-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.hot-item-text {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
