/* pages/index/index.wxss */

/* Header */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.logo-container {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F5F5DC 100%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(139, 69, 19, 0.15);
  margin-bottom: 24rpx;
}

.logo {
  font-size: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #5D4037;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #8D6E63;
}

/* Question Card */
.question-card {
  position: relative;
}

.input-field {
  width: 100%;
  min-height: 240rpx;
  font-size: 30rpx;
  line-height: 1.6;
  background-color: #FAFAFA;
  border: 2rpx solid #E8E8E8;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #8B4513;
}

.placeholder {
  color: #BDBDBD;
}

.char-count {
  position: absolute;
  right: 24rpx;
  bottom: 16rpx;
  font-size: 22rpx;
  color: #BDBDBD;
}

/* Button Container */
.btn-container {
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
}

.generate-btn {
  width: 80%;
  max-width: 600rpx;
  padding: 28rpx 48rpx;
  font-size: 34rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  box-shadow: 0 6rpx 20rpx rgba(139, 69, 19, 0.35);
}

.generate-btn[disabled] {
  background: #BDBDBD;
  box-shadow: none;
}

/* History Entry */
.history-entry {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  margin: 32rpx 0;
  background-color: #FFFFFF;
}

.history-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.history-text {
  flex: 1;
  font-size: 28rpx;
  color: #5D4037;
}

.arrow {
  font-size: 36rpx;
  color: #BDBDBD;
}

/* Sample Questions */
.sample-section {
  margin-top: 32rpx;
}

.sample-title {
  display: block;
  font-size: 28rpx;
  color: #8D6E63;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.sample-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.sample-item {
  padding: 24rpx 28rpx;
  background-color: rgba(255, 255, 255, 0.7);
  transition: all 0.2s ease;
}

.sample-item:active {
  transform: scale(0.98);
  background-color: #FFFFFF;
}

.sample-q {
  font-size: 26rpx;
  color: #5D4037;
  line-height: 1.5;
}
