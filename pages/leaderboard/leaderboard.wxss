/* pages/leaderboard/leaderboard.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F5DC;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #8D6E63;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #FF8A65;
  color: #FFFFFF;
  font-weight: bold;
}

/* 排行榜列表 */
.rank-list {
  margin-top: 20rpx;
}

.rank-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.rank-item.top-three {
  background: linear-gradient(135deg, #FFF8E7 0%, #FFFFFF 100%);
  border: 2rpx solid #FFD700;
}

/* 排名 */
.rank-num {
  width: 60rpx;
  text-align: center;
}

.num {
  font-size: 36rpx;
  font-weight: bold;
  color: #8D6E63;
}

.num.top {
  color: #FFD700;
  font-size: 44rpx;
}

/* 用户信息 */
.user-info {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.avatar {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.name {
  font-size: 30rpx;
  color: #5D4037;
  font-weight: bold;
  display: block;
}

.stats {
  display: flex;
  margin-top: 8rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #8D6E63;
  margin-right: 20rpx;
}

/* 分数 */
.score {
  text-align: right;
  min-width: 80rpx;
}

.score-num {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF8A65;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #8D6E63;
  font-size: 28rpx;
}

/* 当前用户排名 */
.current-user-rank {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.current-user-rank .label {
  font-size: 28rpx;
  color: #8D6E63;
}

.current-user-rank .rank-info {
  display: flex;
  align-items: center;
}

.current-user-rank .rank-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF8A65;
  margin-right: 20rpx;
}

.current-user-rank .score {
  font-size: 32rpx;
  font-weight: bold;
  color: #5D4037;
}
