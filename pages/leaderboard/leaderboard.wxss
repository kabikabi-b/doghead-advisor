/* pages/leaderboard/leaderboard.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F5DC;
  padding: 20rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #8D6E63;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #FF8A65;
  color: #FFFFFF;
  font-weight: bold;
}

/* 问题列表 */
.question-list {
  padding-bottom: 20rpx;
}

.question-item {
  display: flex;
  align-items: flex-start;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.rank-badge {
  width: 60rpx;
  height: 60rpx;
  background-color: #E0E0E0;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rank-badge.top {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.rank-badge text {
  font-size: 28rpx;
  font-weight: bold;
  color: #5D4037;
}

.rank-badge.top text {
  color: #FFFFFF;
}

.question-content {
  flex: 1;
}

.question-text {
  font-size: 30rpx;
  color: #5D4037;
  line-height: 1.5;
  display: block;
}

.question-meta {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.likes {
  font-size: 24rpx;
  color: #FF8A65;
  margin-right: 20rpx;
}

.time {
  font-size: 22rpx;
  color: #BDBDBD;
}

/* 空状态 */
.empty-state,
.loading-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text,
.loading-state text {
  color: #8D6E63;
  font-size: 28rpx;
}
