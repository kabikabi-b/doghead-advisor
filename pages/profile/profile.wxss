/* pages/profile/profile.wxss */

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF7ED 0%, #FEFCE8 50%, #EFF6FF 100%);
  padding-bottom: 40rpx;
}

/* 顶部横幅图 */
.hero-banner {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.hero-img {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50%;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 247, 237, 0.8) 100%);
}

/* Scroll */
.scroll-area {
  height: 100vh;
  margin-top: -120rpx;
  position: relative;
  z-index: 1;
}

.content {
  padding: 0 32rpx;
  padding-bottom: 180rpx;
}

/* 用户卡片 */
.user-card {
  padding: 48rpx;
  position: relative;
  overflow: hidden;
}

.user-info-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 32rpx;
}

.avatar-wrap {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F97316, #EAB308);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.avatar-emoji {
  font-size: 56rpx;
  line-height: 1;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-nickname {
  font-size: 40rpx;
  font-weight: 600;
  color: #1F2937;
}

.user-id {
  font-size: 26rpx;
  color: #6B7280;
}

/* 每日运势 */
.fortune-card {
  background: linear-gradient(135deg, #FFEDD5, #FEF9C3);
  border: 2rpx solid #FED7AA;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.fortune-dog-deco {
  position: absolute;
  bottom: -32rpx;
  right: -32rpx;
  width: 192rpx;
  height: 192rpx;
  opacity: 0.3;
  border-radius: 50%;
}

.fortune-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.fortune-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #9A3412;
}

.fortune-advice {
  font-size: 24rpx;
  color: #EA580C;
  font-style: italic;
}

/* 今日提问 */
.today-card {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.today-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.today-icon {
  font-size: 36rpx;
}

.today-label {
  font-size: 28rpx;
  color: #4B5563;
}

.today-count {
  font-size: 48rpx;
  font-weight: bold;
  color: #EA580C;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.stats-grid-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stats-icon {
  font-size: 40rpx;
}

.stats-num {
  font-size: 48rpx;
  font-weight: bold;
}

.stats-num-orange {
  color: #EA580C;
}

.stats-num-red {
  color: #DC2626;
}

.stats-num-blue {
  color: #2563EB;
}

.stats-label {
  font-size: 24rpx;
  color: #6B7280;
}

/* 最近提问 */
.recent-section {
  padding: 32rpx;
}

.recent-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.recent-header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.recent-icon {
  font-size: 36rpx;
}

.recent-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

.recent-viewall {
  font-size: 28rpx;
  color: #EA580C;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  gap: 16rpx;
}

.empty-emoji {
  font-size: 80rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6B7280;
}

.go-ask-btn {
  margin-top: 16rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
}

/* 提问列表项 */
.question-item {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #F3F4F6;
}

.question-item:last-child {
  border-bottom: none;
}

.question-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1F2937;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  margin-right: 16rpx;
}

.question-date {
  font-size: 24rpx;
  color: #9CA3AF;
  flex-shrink: 0;
}

/* 深色模式切换 */
.theme-card {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.theme-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.theme-icon {
  font-size: 40rpx;
}

.theme-label {
  font-size: 30rpx;
  color: #374151;
}

/* 设置 */
.settings-card {
  padding: 16rpx 32rpx;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 2rpx solid #F3F4F6;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
}

.settings-text {
  font-size: 30rpx;
  color: #374151;
}

.settings-text-danger {
  font-size: 30rpx;
  color: #DC2626;
}

/* Footer */
.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  gap: 8rpx;
}

.footer-version {
  font-size: 26rpx;
  color: #9CA3AF;
}

.footer-slogan {
  font-size: 26rpx;
  color: #9CA3AF;
}
