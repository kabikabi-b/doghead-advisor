/* pages/result/result.wxss */

/* Container */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #F5F5DC 0%, #FFE4B5 100%);
  padding: 0 30rpx;
}

/* Header */
.header {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  justify-content: center;
}

.header-center {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.header-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 3rpx solid #FF8A65;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5D4037;
}

/* Card */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 69, 19, 0.1);
}

.card-label {
  display: inline-block;
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  background: #8B4513;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.card-label.answer {
  background: #FF8A65;
}

.card-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #5D4037;
}

/* Action Buttons */
.action-buttons {
  display: flex;
  gap: 24rpx;
  margin: 40rpx 0;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.1);
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.liked {
  background: #FFEBEE;
}

.action-icon {
  font-size: 36rpx;
}

.action-text {
  font-size: 28rpx;
  color: #5D4037;
  font-weight: 600;
}

/* Ask Again Button */
.ask-again-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(100% - 60rpx);
  margin: 0 30rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #FF8A65 0%, #FF7043 100%);
  border-radius: 16rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(255, 138, 101, 0.4);
}

.ask-again-btn:active {
  transform: scale(0.98);
}

/* Toast */
.toast {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.75);
  color: #FFFFFF;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.toast.show {
  opacity: 1;
}
