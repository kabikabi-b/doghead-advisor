/* pages/result/result.wxss */

/* Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 32rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.back-btn:active {
  background-color: rgba(139, 69, 19, 0.1);
}

.back-icon {
  font-size: 40rpx;
  color: #8B4513;
  font-weight: 300;
}

.back-text {
  font-size: 28rpx;
  color: #8B4513;
  margin-left: 4rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #5D4037;
}

.header-placeholder {
  width: 100rpx;
}

/* Cards */
.card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.label {
  font-size: 24rpx;
  color: #8D6E63;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.question-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #5D4037;
  line-height: 1.6;
}

/* Answer Card */
.answer-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF8E7 100%);
  border: 2rpx solid rgba(255, 138, 101, 0.3);
}

.answer-container {
  padding: 24rpx 0;
}

.answer-text {
  font-size: 34rpx;
  color: #5D4037;
  line-height: 1.8;
  white-space: pre-wrap;
}

.style-tag {
  display: inline-block;
  background: linear-gradient(135deg, #FF8A65 0%, #FF7043 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin-top: 16rpx;
}

/* Action Buttons */
.action-buttons {
  display: flex;
  gap: 24rpx;
  margin: 40rpx 0;
}

.btn-action {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
}

.btn-action:active {
  transform: scale(0.98);
}

.copy-btn {
  background-color: #5D4037;
  color: #FFFFFF;
}

.like-btn {
  background-color: #F5F5DC;
  color: #5D4037;
  border: 2rpx solid #E0E0E0;
}

.like-btn.liked {
  background-color: #FF8A65;
  color: #FFFFFF;
  border-color: #FF8A65;
}

/* Ask Again */
.ask-again-container {
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
}

.ask-again-btn {
  width: 80%;
  max-width: 600rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* Toast */
.toast {
  position: fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%) translateY(40rpx);
  background-color: rgba(0, 0, 0, 0.75);
  color: #FFFFFF;
  padding: 20rpx 48rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  opacity: 0;
  transition: all 0.3s ease;
  pointer-events: none;
  z-index: 100;
}

.toast.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}
