/* pages/result/result.wxss */

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF7ED 0%, #FEFCE8 50%, #EFF6FF 100%);
  padding-bottom: 40rpx;
}

/* 顶部导航栏 */
.sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-bottom: 2rpx solid #FFEDD5;
}

.header-inner {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  padding-top: calc(24rpx + env(safe-area-inset-top));
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.back-btn:active {
  background: rgba(234, 88, 12, 0.1);
}

.back-arrow {
  font-size: 40rpx;
  color: #EA580C;
  font-weight: 600;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
}

/* 卡片通用 */
.card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  margin: 24rpx 32rpx 0;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

/* 用户信息卡片 */
.user-card {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-emoji {
  font-size: 48rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1F2937;
}

.user-time {
  font-size: 26rpx;
  color: #6B7280;
  margin-top: 4rpx;
}

.user-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.view-icon {
  font-size: 28rpx;
}

.view-count {
  font-size: 26rpx;
  color: #6B7280;
}

/* 问题卡片 */
.question-card {
  padding: 48rpx;
}

.card-label {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
  display: block;
}

.question-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #1F2937;
  line-height: 1.6;
  display: block;
}

/* 回答卡片 */
.answer-card {
  padding: 48rpx;
  background: linear-gradient(135deg, #FFF7ED 0%, #FEFCE8 100%);
}

.answer-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.answer-emoji {
  font-size: 40rpx;
}

.answer-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #EA580C;
}

.answer-text {
  font-size: 32rpx;
  color: #1F2937;
  line-height: 1.8;
  white-space: pre-wrap;
  display: block;
}

/* 操作栏 */
.action-bar {
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-item:active {
  opacity: 0.7;
}

.action-icon {
  font-size: 48rpx;
  color: #4B5563;
}

.action-icon.liked {
  color: #EF4444;
}

.action-count {
  font-size: 26rpx;
  color: #4B5563;
}

.action-count.liked {
  color: #EF4444;
}

/* 评论占位 */
.comment-placeholder {
  padding: 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.comment-emoji {
  font-size: 80rpx;
}

.comment-hint {
  font-size: 28rpx;
  color: #6B7280;
}

/* Toast */
.toast {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.75);
  color: #FFFFFF;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.toast.show {
  opacity: 1;
}
